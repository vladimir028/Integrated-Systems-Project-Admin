@model AdminApplication.Models.Order

<div class="container">
    <div>
        <a class="btn btn=success">Order for @Model.Owner.UserName</a>
    </div>

    @for(int i=0;i<Model.ProductInOrders.Count(); i++)
    {
        var item = Model.ProductInOrders.ElementAt(i).OrderedProduct;
        if(i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 m-4">

            <div class="card" style="width: 18rem; height: 35rem">
                @* <img class="card-img-top" src="@item." alt="Card image cap"> *@
                <div class="card-body">
                    <h5 class="card-title">Movie Name: @item.Movie.MovieName</h5>
                    <p class="card-text">>Movie Description: @item.Movie.MovieDescription</p>
                    <h6>Price: @item.Price</h6>
                </div>

            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }
</div>