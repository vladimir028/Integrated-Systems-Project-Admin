@model List<AdminApplication.Models.Order>;

<div class="container">
    <div class="row mb-4">
        <a asp-action="ExportOrders" class="btn btn-outline-dark btn-lg">Export All Orders</a>
    </div>

    <div class="row">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Number of Travel Packages Bought</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">No active orders</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.EShopApplicationUser.UserName</td>
                            <td>@item.TravelPackageInOrders.Count</td>
                            <td>
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Details" asp-route-Id="@item.Id" class="btn btn-outline-primary btn-sm">Details</a>
                                    <a asp-action="CreateInvoice" asp-route-Id="@item.Id" class="btn btn-outline-secondary btn-sm">Create Invoice</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
